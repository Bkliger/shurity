<section>
  <div id="answerUpdate">
    <div class="container-small">
      <div class="row">
            <div class="col-xs-1">
            </div>
            <div class="col-xs-9 question">
              <!-- <!%=products_path = "/categories/" + params[:cat_id] + "/users/" + @user_id.to_s + "/products"%> -->
              <%= form_tag('/answers/update', method: :put)  do %>
                <% @update_answer_array.each do |answer| %>
                  <%= fields_for 'answers[]', answer do |p| %>
                    <% if answer.question.presentation_type == "slider" %>
                        <div class="budget-slider">
                          <div class="question-text">
                            <%=answer.question.text%>
                          </div>
                          <div id="slider"></div>
                          <div class="answer-field">
                            <input type="hidden" id="slider_id" name="answers[][answer_text]" value="<%=answer.answer_text%>"/>
                          </div>
                          <div class="answer-field">
                               <%= p.hidden_field :stored_answer_id %>
                          </div>
                          <div class="answer-field">
                            <%= p.hidden_field :category_id %>
                          </div>
                          <div class="answer-field">
                            <%= p.hidden_field :user_id %>
                          </div>
                          <div class="answer-field">
                            <%= p.hidden_field :question_id %>
                          </div>
                        </div>

                    <% elsif answer.question.presentation_type == "reg-slider" %>
                        <div class="reg-slider">
                          <div class="slider-value">
                              <div class="question-text">
                                <%=answer.question.text%>
                              </div>
                            <div>
                            <input class="reg-slider-input" type="text" name="answers[][answer_text]"
                             data-provide="slider"
                             data-slider-ticks="[1, 2, 3,4,5]"
                             data-slider-ticks-labels='["Very Unimportant", "Unimportant", "Neutral", "Important", "Very Important"]'
                             data-slider-min="1"
                             data-slider-max="5"
                             data-slider-step="1"
                             data-slider-value="<%=answer.answer_text%>"
                             data-slider-tooltip="hide"
                             data-slider-answer="<%=answer.answer_text%>"
                             />

                           </div>

                           <div class="answer-field">
                             <%= p.hidden_field :stored_answer_id %>
                           </div>
                           <div class="answer-field">
                             <%= p.hidden_field :category_id %>
                           </div>
                           <div class="answer-field">
                             <%= p.hidden_field :user_id %>
                           </div>
                           <div class="answer-field">
                             <%= p.hidden_field :question_id %>
                           </div>
                        </div>
                      </div>
                      <% elsif answer.question.presentation_type == "select" %>
                          <% @options = Option.where("question_id = ?", answer.question_id) %>
                          <div class="select">
                            <div class="question-text">
                              <%=answer.question.text%>
                            </div>
                            <div class="select">
                              <select name="answers[][answer_text]">
                                <% if answer.answer_text == "none" %>
                                  <option value="" disabled selected>Select your option</option>
                                  <option value="<%= @options.first.opt_value %>"><%= @options.first.opt_value %></option>
                                  <option value="<%= @options.last.opt_value %>"><%= @options.last.opt_value %></option>
                                <% elsif answer.answer_text == @options.first.opt_value%>
                                  <option value="<%= @options.first.opt_value %>"selected><%= @options.first.opt_value %></option>
                                  <option value="<%= @options.last.opt_value %>"><%= @options.last.opt_value %></option>
                                <% else answer.answer_text == @options.last.opt_value%>
                                  <option value="<%= @options.first.opt_value %>"><%= @options.first.opt_value %></option>
                                  <option value="<%= @options.last.opt_value %>"selected><%= @options.last.opt_value %></option>
                                <% end %>
                              </select>
                            </div>
                            <div class="answer-field">
                                 <%= p.hidden_field :stored_answer_id %>
                            </div>
                              <div class="field">
                              <%= p.hidden_field :category_id %>
                            </div>
                            <div class="field">
                              <%= p.hidden_field :user_id %>
                            </div>
                            <div class="field">
                              <%= p.hidden_field :question_id %>
                            </div>
                          </div>

                     <% else %>
                      <span id="ex18-label-1"><%=answer.question.text%></span>
                       <div class="answer-field">
                         <%= p.hidden_field :stored_answer_id %>
                       <div class="field">
                          <%= p.label :answer_text %><br>
                          <%= p.text_field :answer_text %>
                        </div>
                        <div class="field">
                          <%= p.label :category_id %><br>
                          <%= p.text_field :category_id %>
                        </div>
                        <div class="field">
                          <%= p.label :user_id %><br>
                          <%= p.text_field :user_id %>
                        </div>
                        <div class="field">
                          <%= p.label :question_id %><br>
                          <%= p.text_field :question_id %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                  <div class="actions">
                    <%= submit_tag(value="Update Answers", id: "update-answers") %>
                  </div>
              <% end %>
            </div>
      </div>
      <div class="col-xs-2">
      </div>
    </div>
  </div>
</section>
