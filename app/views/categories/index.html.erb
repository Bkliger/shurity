
<div id="splash">
  <div class="jumbotron jumbotron-fluid">
    <div class="row pull-right flash">
      <% flash.each do |name, msg| %>
        <% if name == "notice"%>
          <strong id="flash-notice"> <%= name.capitalize %>: <%= msg %></strong>
        <% elsif name == "error" || name == "alert" %>
          <strong id="flash-error"> <%= name.capitalize %>: <%= msg %> </strong>
        <% end %>
      <% end %>
    </div>
    <div id="large-container" class="container">
      <br>
      <div class="col-lg-12">
        <h1 class="display-3">Welcome to Shurity</h1>
        <p class="lead">Getting you what <strong><em>You</em></strong> want</p>
        <%if user_signed_in? %>
          <p><h4>What Product Are You Looking For?</h4</p>
          <p><h5>Enter the first few letters.</h5</p><br></br>
          <div class="col-lg-3" id="cat-dropdown">
            <div class="row">
              <input type="text" class="form-control" id="test-text" name="test-text" value=""></input>
              <div id="cat-div">
                <!-- this is where the dropdown is placed in javascript -->
              </div>
            </div>

          </div>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class: "btn btn-danger"%>

            <%= link_to "Sign up", "/users/sign_up", class: "btn btn-danger"%><br>

        <% end %>

          <div class="dropdown">
          <ul class="list-group">

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
