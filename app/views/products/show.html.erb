<div id="product-show">
  <section>
    <div class = "row center">
      <br><br>
      <h3 class="display-4"> <%=@product.category.name %>&nbsp Product Detail</h3>
    </div>
    <div id="large-show-container" class="container">

      <div class="row">
        <div class="centerBlock">
          <div class="col-sm-5 left">
            <!-- <img src="<!%=@product.image_URL%>" style="width: 90%; height: 90%" alt="MDN"> -->
              <%= image_tag(@product.image_URL, :class => "prod-image")%>
          </div>
          <div class="col-sm-7">
            <h3 class="display-4"><%= @product.name %> </h3>
            <h4> <strong>Why this product fits for you </strong></h4>
          <%= raw @product.block_1 %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <div class="card">
            <div class="card-block">
                <h4 class="card-title">Scorecard</h4>
                <ul class="card-text">
                  <%= raw @product.block_2 %>
                </ul>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-block">
                <%= raw @product.block_3 %>
            </div>
          </div>
        </div>
        <div class="col-sm-4 left">
          <div class="card">
              <div class="card-block">
                <h4 class="card-title">Additional Information</h4>
                <ul class="card-text">
                  <li><a target="_blank" href="https://www.youtube.com/watch?v=CFs2NFVhNMs">7 best floating speakers</a></li>
                  <li><a target="_blank" href="http://www.cnet.com/products/ue-roll/">CNET Product review Link</a></li>
                  <li><a target="_blank" href="">Fan rating metrics dashboard</a></li>
                  <li><a target="_blank" href="http://www.bassheadspeakers.com/top-10-best-outdoor-bluetooth-speakers/">Bluetooth Speaker buying guide</a></li>
                  <li><a target="_blank" href="">Product Reviews</a></li>
                  <li><a target="_blank" href="http://www.digitaltrends.com/mobile/how-does-bluetooth-work/">How does Bluetooth work?</a></li>
                </ul>
              </div>
          </div>
        </div>
      </div>
      <% my_path = "/categories/" + params[:cat_id] + "/users/" + params[:user_id] + "/products/1/index" %>
      <%= link_to 'Back to Product Matches', my_path, class: "btn-primary btn" %>
        <%= link_to "<--Change My Answers",  edit_answers_path(params[:user_id]), class: "btn-primary btn"%>
    </div>
  </section>
</div>
